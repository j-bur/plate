{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "COMPONENTS_BASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "NODE_ENV",
        "npm_config_user_agent"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:watch": {
      "cache": false,
      "persistent": true
    },
    "brl": {
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["build"],
      "cache": true
    },
    "e2e-examples#lint:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "www#lint:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:watch": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    }
  }
}
