{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/dist",
    "paths": {
      "@udecode/plate": [
        "../packages/plate/index"
      ],
      "@/*": [
        "./*"
      ],
      "@/plate/*": [
        "./lib/plate/*"
      ],
      "examples/*": [
        "../../src/*"
      ]
    },
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}





